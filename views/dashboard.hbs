<ul class="breadcrumb">
  <li>
    <i class="icon-home"></i>
    <a href="index.html">Home</a>
    <i class="icon-angle-right"></i>
  </li>
  <li><a href="#">Dashboard</a></li>
</ul>
<div class="row-fluid sortable">
  <div class="box span6">
    <div class="box-header" data-original-title>
      <h2><i class="halflings-icon white user"></i><span class="break"></span>Characters</h2>
      <div class="box-icon">
        <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
        <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
      </div>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date Created</th>
            <th>Race</th>
            <th>Class</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        	{{#each user.characters}}
						<tr>
							<td>{{this.name}}</td>
							<td>{{this.created_at}}</td>
							<td>{{this.race}}</td>
							<td>{{this.charClass}}</td>
							<td>
								<a class="btn btn-success" href="#">
									<i class="halflings-icon white zoom-in"></i>  
								</a>
								<a class="btn btn-info" href="#">
									<i class="halflings-icon white edit"></i>  
								</a>
								<a class="btn btn-danger" href="#">
									<i class="halflings-icon white trash"></i> 
								</a>
							</td>
						</tr>
        	{{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="box span6">
    <div class="box-header" data-original-title>
      <h2><i class="halflings-icon white bookmark"></i><span class="break"></span>Campaigns</h2>
      <div class="box-icon">
        <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
        <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
      </div>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        	{{#each user.campaigns}}
        	<script>console.log('{{this}}');</script>
						<tr>
							<td>{{this.name}}</td>
							<td>{{this.created_at}}</td>
							<td>
								<a class="btn btn-success" href="#">
									<i class="halflings-icon white zoom-in"></i>  
								</a>
								<a class="btn btn-info" href="#">
									<i class="halflings-icon white edit"></i>  
								</a>
								<a class="btn btn-danger" href="#">
									<i class="halflings-icon white trash"></i> 
								</a>
							</td>
						</tr>
        	{{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>
