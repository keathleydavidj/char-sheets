<h1>Dashboard</h1>
{{#if user}}

  <div class="container">
    <div class="row">
      <div class="panel panel-default col-xs-12 col-md-6">
        <div class="panel-heading">
          <h3 class="panel-title">Character Sheets</h3>
        </div>
        <ul class="list-group">
          {{#each user.characters}}
            <li class="list-group-item"><a href="/api/characters/{{this}}">{{this}}</a></li>
          {{/each}}
        </ul>
      </div>
      <div class="panel panel-default col-xs-12 col-md-6">
        <div class="panel-heading">
          <h3 class="panel-title">Campaigns</h3>
        </div>
        <ul class="list-group">
          {{#each user.campaigns}}
            <li class="list-group-item"><a href="/api/campaigns/{{this}}">{{this}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function(event) {
      $.ajax({
          url: '/api/users/{{ user._id }}',
        })
        .done(function(data, textStatus, jqXHR) {
          console.log(data);
        });
    });
  </script>

{{else}}

  <p>
    There's not a user here for some reason.
  </p>

{{/if}}
